{% extends 'base.html.twig' %}

{% block title %}Changer le mot de passe{% endblock %}

{% block body %}
<h1>Changer votre mot de passe</h1>

{{ form_start(form) }}
    {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control', 'placeholder': 'Nouveau mot de passe'}}) }}
    {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control', 'placeholder': 'Confirmer le mot de passe'}}) }}
    <button class="btn btn-primary">Valider</button>
{{ form_end(form, {'render_rest': false}) }}
{% endblock %}
