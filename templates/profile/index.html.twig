{% extends 'base.html.twig' %}

{% block title %}Hello ProfileController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="container">
		<div class="row">
			<div class="col-12">
				<h1 class="mb-4">Mon Profil</h1>
				
				<div class="row">
					<div class="col-md-6 mb-4">
						<div class="card">
							<div class="card-header bg-primary text-white">
								<h5 class="mb-0"><i class="fas fa-hand-holding"></i> Mes Emprunts</h5>
							</div>
							<div class="card-body">
								{% if rents is not empty %}
									<p>Vous avez {{ rents|length }} emprunt(s) en cours.</p>
									<a href="{{ path('app_my_rents') }}" class="btn btn-primary">Voir mes emprunts</a>
								{% else %}
									<p>Aucun emprunt en cours.</p>
									<a href="{{ path('app_clothe_index') }}" class="btn btn-outline-primary">Voir les vêtements</a>
								{% endif %}
							</div>
						</div>
					</div>
					
					<div class="col-md-6 mb-4">
						<div class="card">
							<div class="card-header bg-info text-white">
								<h5 class="mb-0"><i class="fas fa-inbox"></i> Demandes Reçues</h5>
							</div>
							<div class="card-body">
								<p>Gérez les demandes de location de vos vêtements.</p>
								<a href="{{ path('app_rent_received') }}" class="btn btn-info">Voir les demandes</a>
							</div>
						</div>
					</div>
					
					<div class="col-md-6 mb-4">
						<div class="card">
							<div class="card-header bg-warning text-white">
								<h5 class="mb-0"><i class="fas fa-paper-plane"></i> Mes Demandes</h5>
							</div>
							<div class="card-body">
								<p>Suivez vos demandes de location.</p>
								<a href="{{ path('app_my_requests') }}" class="btn btn-warning">Voir mes demandes</a>
							</div>
						</div>
					</div>
					
					<div class="col-md-6 mb-4">
						<div class="card">
							<div class="card-header bg-success text-white">
								<h5 class="mb-0"><i class="fas fa-tshirt"></i> Mes Vêtements</h5>
							</div>
							<div class="card-body">
								<p>Gérez vos vêtements à louer.</p>
								<a href="{{ path('app_my_clothes') }}" class="btn btn-success">Voir mes vêtements</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
