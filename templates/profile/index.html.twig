{% extends 'base.html.twig' %}

{% block title %}Mon Profil - PYW{% endblock %}

{% block body %}
<div class="fade-in-up">
    <div class="row">
        <div class="col-12">
            <!-- Header du profil -->
            <div class="text-center mb-5">
                <div class="bg-pink rounded-circle d-inline-flex align-items-center justify-content-center mb-3" 
                     style="width: 80px; height: 80px;">
                    <i class="fas fa-user fa-2x text-pink"></i>
                </div>
                <h1 class="text-pink">Mon Profil</h1>
                <h4 class="text-pink mb-2">{{ user.username }}</h4>
                <p class="text-muted">{{ user.email }}</p>
            </div>

            <!-- Cartes d'actions -->
            <div class="row">
                <!-- Mes Emprunts -->
                <div class="col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="fas fa-hand-holding me-2"></i>Mes Emprunts
                            </h5>
                        </div>
                        <div class="card-body">
                            {% if rents is not empty %}
                                <p class="mb-3">Vous avez {{ rents|length }} emprunt(s) en cours.</p>
                                <a href="{{ path('app_my_rents') }}" class="btn btn-primary">
                                    <i class="fas fa-eye me-1"></i>Voir mes emprunts
                                </a>
                            {% else %}
                                <p class="mb-3">Aucun emprunt en cours.</p>
                                <a href="{{ path('app_clothe_index') }}" class="btn btn-outline-primary">
                                    <i class="fas fa-search me-1"></i>Voir les vêtements
                                </a>
                            {% endif %}
                        </div>
                    </div>
                </div>

                <!-- Demandes Reçues -->
                <div class="col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="fas fa-inbox me-2"></i>Demandes Reçues
                            </h5>
                        </div>
                        <div class="card-body">
                            <p class="mb-3">Gérez les demandes de location de vos vêtements.</p>
                            <a href="{{ path('app_rent_received') }}" class="btn btn-info">
                                <i class="fas fa-bell me-1"></i>Voir les demandes
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Mes Demandes -->
                <div class="col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="fas fa-paper-plane me-2"></i>Mes Demandes
                            </h5>
                        </div>
                        <div class="card-body">
                            <p class="mb-3">Suivez vos demandes de location.</p>
                            <a href="{{ path('app_my_requests') }}" class="btn btn-warning">
                                <i class="fas fa-clock me-1"></i>Voir mes demandes
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Mes Vêtements -->
                <div class="col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="fas fa-tshirt me-2"></i>Mes Vêtements
                            </h5>
                        </div>
                        <div class="card-body">
                            <p class="mb-3">Gérez vos vêtements à louer.</p>
                            <a href="{{ path('app_my_clothes') }}" class="btn btn-success">
                                <i class="fas fa-tshirt me-1"></i>Voir mes vêtements
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Historique -->
                <div class="col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="fas fa-history me-2"></i>Historique
                            </h5>
                        </div>
                        <div class="card-body">
                            <p class="mb-3">Consultez l'historique de tous vos emprunts.</p>
                            <a href="{{ path('app_rent_history') }}" class="btn btn-outline-primary">
                                <i class="fas fa-chart-line me-1"></i>Voir l'historique
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Paramètres -->
                <div class="col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="fas fa-cog me-2"></i>Paramètres
                            </h5>
                        </div>
                        <div class="card-body">
                            <p class="mb-3">Gérez vos paramètres de compte.</p>
                            <div class="d-flex gap-2">
                                <a href="{{ path('app_profile_change_password') }}" class="btn btn-outline-secondary btn-sm">
                                    <i class="fas fa-key me-1"></i>Changer le mot de passe
                                </a>
                                <a href="{{ path('app_logout') }}" class="btn btn-outline-danger btn-sm">
                                    <i class="fas fa-sign-out-alt me-1"></i>Déconnexion
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}