<!-- Header Desktop -->
<header class="desktop-header">
    <div class="container">
        <nav class="navbar navbar-expand-lg">
            <a class="navbar-brand" href="{{ path('app_clothe_index') }}">
                <i class="fas fa-tshirt me-2"></i>PYW
            </a>
            
            <div class="navbar-nav ms-auto">
                <a class="nav-link me-3" href="{{ path('app_clothe_index') }}">
                    <i class="fas fa-home me-1"></i> Accueil
                </a>
                
                <a class="nav-link me-3" href="{{ path('app_clothe_new') }}">
                    <i class="fas fa-plus me-1"></i> Ajouter un vêtement
                </a>
                {% if app.user %}
                    <a class="nav-link me-3" href="{{ path('app_my_rents') }}">
                        <i class="fas fa-hand-holding me-1"></i> Mes emprunts
                    </a>
                    <a class="nav-link me-3" href="{{ path('app_rent_history') }}">
                        <i class="fas fa-history me-1"></i> Historique
                    </a>
                    {% if 'ROLE_ADMIN' in app.user.roles %}
                        <a class="nav-link me-3" href="{{ path('app_user_index') }}">
                            <i class="fas fa-cog me-1"></i> Administration
                        </a>
                    {% endif %}
                    <a class="nav-link" href="{{ path('app_profile') }}">
                        <i class="fas fa-user me-1"></i> Profil
                    </a>
                    <form action="{{ path('app_logout') }}" method="post" style="display:inline;">
                        <button class="btn btn-link text-white nav-link" type="submit">
                            <i class="fas fa-sign-out-alt"></i> Déconnexion
                        </button>
                    </form>
                {% else %}
                    <a class="nav-link me-3" href="{{ path('app_register') }}">
                        <i class="fas fa-user-plus me-1"></i> S'inscrire
                    </a>
                    <a class="nav-link" href="{{ path('app_login') }}">
                        <i class="fas fa-sign-in-alt me-1"></i> Connexion
                    </a>
                    <a class="nav-link text-white" href="{{ path('app_register') }}">
                        S'inscrire
                    </a>
                {% endif %}
            </div>
        </nav>
    </div>
</header>
