{% extends 'base.html.twig' %}

{% block title %}Modifier {{ clothe.title }} - PYW{% endblock %}

{% block body %}
<div class="fade-in-up">
    <!-- Header avec bouton retour -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-pink">
            <i class="fas fa-edit me-2"></i>
            {% if app.user and 'ROLE_ADMIN' in app.user.roles %}
                Modifier (Admin) - {{ clothe.title }}
            {% else %}
                Modifier - {{ clothe.title }}
            {% endif %}
        </h1>
        <div class="d-flex gap-2">
            <button onclick="supprimerVetement()" class="btn btn-danger" style="background-color: #dc3545 !important; color: white !important; border: 1px solid #dc3545 !important; padding: 8px 16px !important; font-size: 14px !important; display: inline-block !important; visibility: visible !important; opacity: 1 !important;">
                <i class="fas fa-trash me-1"></i>Supprimer
            </button>
            <a href="{{ path('app_clothe_index') }}" class="btn btn-outline-primary">
                <i class="fas fa-arrow-left me-1"></i>Retour à la liste
            </a>
        </div>
    </div>

    <!-- Formulaire de modification -->
    <div class="row">
        <div class="col-12 col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-edit me-2"></i>Modifier les informations
                    </h5>
                </div>
                <div class="card-body">
                    {{ include('clothe/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
                </div>
            </div>
        </div>
        
        <!-- Actions -->
        <div class="col-12 col-lg-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-cog me-2"></i>Actions
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="{{ path('app_clothe_show', {'id': clothe.id}) }}" class="btn btn-primary">
                            <i class="fas fa-eye me-1"></i>Voir le vêtement
                        </a>
                        
                        {% if app.user and 'ROLE_ADMIN' in app.user.roles %}
                            <div class="alert alert-warning">
                                <i class="fas fa-exclamation-triangle me-2"></i>
                                <strong>Mode Admin :</strong> Vous modifiez ce vêtement en tant qu'administrateur.
                            </div>
                        {% endif %}
                        
                        <!-- Bouton de suppression -->
                        <div class="mt-3">
                            <h6 class="text-danger mb-2">
                                <i class="fas fa-exclamation-triangle me-1"></i>Zone dangereuse
                            </h6>
                            <form method="post" action="{{ path('app_clothe_delete', {'id': clothe.id}) }}" 
                                  onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce vêtement ?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ clothe.id) }}">
                                <button type="submit" class="btn btn-danger w-100">
                                    <i class="fas fa-trash me-1"></i>Supprimer ce vêtement
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function supprimerVetement() {
    if (confirm('Êtes-vous sûr de vouloir supprimer ce vêtement ?')) {
        // Créer un formulaire dynamiquement
        const form = document.createElement('form');
        form.method = 'POST';
        form.action = '{{ path("app_clothe_delete", {"id": clothe.id}) }}';
        
        // Ajouter le token CSRF
        const tokenInput = document.createElement('input');
        tokenInput.type = 'hidden';
        tokenInput.name = '_token';
        tokenInput.value = '{{ csrf_token("delete" ~ clothe.id) }}';
        
        form.appendChild(tokenInput);
        document.body.appendChild(form);
        form.submit();
    }
}
</script>
{% endblock %}
