{% extends 'base.html.twig' %}

{% block title %}Vêtements Disponibles - PYW{% endblock %}

{% block body %}
<div class="fade-in-up">
    <!-- Header avec titre et bouton d'ajout -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-pink">
            <i class="fas fa-tshirt me-2"></i>Vêtements Disponibles
        </h1>
        {% if app.user %}
            <a href="{{ path('app_clothe_new') }}" class="btn btn-primary">
                <i class="fas fa-plus me-1"></i>Ajouter un vêtement
            </a>
        {% endif %}
    </div>

    <!-- Message d'information pour les non-connectés -->
    {% if not app.user %}
        <div class="alert alert-info">
            <i class="fas fa-info-circle me-2"></i>
            <a href="{{ path('app_login') }}" class="alert-link">Connectez-vous</a> pour ajouter vos propres vêtements à la location.
        </div>
    {% endif %}

    <!-- Grille de vêtements -->
    {% if clothes|length > 0 %}
        <div class="row">
            {% for clothe in clothes %}
                <div class="col-12 col-md-6 col-lg-4 mb-4">
                    <div class="card h-100">
                        <!-- Image du vêtement -->
                        <div class="position-relative">
                            {% if clothe.img %}
                                <img src="{{ asset('images/' ~ clothe.img) }}" 
                                     class="card-img-top" 
                                     alt="{{ clothe.title }}" 
                                     style="height: 250px; object-fit: cover;">
                            {% else %}
                                <div class="bg-pink d-flex align-items-center justify-content-center" 
                                     style="height: 250px;">
                                    <i class="fas fa-image text-pink fa-3x"></i>
                                </div>
                            {% endif %}
                            
                            <!-- Badge de statut -->
                            <div class="position-absolute top-0 end-0 m-2">
                                {% if clothe.currentBorrower is not null %}
                                    <span class="badge bg-danger">
                                        <i class="fas fa-user me-1"></i>Emprunté
                                    </span>
                                {% else %}
                                    <span class="badge bg-success">
                                        <i class="fas fa-check me-1"></i>Disponible
                                    </span>
                                {% endif %}
                            </div>
                        </div>
                        
                        <!-- Contenu de la carte -->
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">{{ clothe.title }}</h5>
                            
                            <!-- Badges d'état et catégorie -->
                            <div class="mb-3">
                                <span class="badge bg-secondary me-2">
                                    <i class="fas fa-tag me-1"></i>{{ clothe.state.name ?? 'Non défini' }}
                                </span>
                                <span class="badge bg-info">
                                    <i class="fas fa-layer-group me-1"></i>{{ clothe.category.name ?? 'Non définie' }}
                                </span>
                            </div>
                            
                            <!-- Propriétaire -->
                            <p class="text-muted small mb-3">
                                <i class="fas fa-user me-1"></i>Propriétaire : {{ clothe.user ? clothe.user.username : 'Non défini' }}
                            </p>
                            
                            <!-- Actions -->
                            <div class="mt-auto">
                                <div class="d-flex gap-2 flex-wrap">
                                    <a href="{{ path('app_clothe_show', {'id': clothe.id}) }}" 
                                       class="btn btn-primary btn-sm">
                                        <i class="fas fa-eye me-1"></i>Voir
                                    </a>
                                    
                                    {% if app.user and app.user == clothe.user %}
                                        <a href="{{ path('app_clothe_edit', {'id': clothe.id}) }}" 
                                           class="btn btn-outline-primary btn-sm">
                                            <i class="fas fa-edit me-1"></i>Modifier
                                        </a>
                                    {% elseif app.user and 'ROLE_ADMIN' in app.user.roles %}
                                        <a href="{{ path('app_clothe_edit', {'id': clothe.id}) }}" 
                                           class="btn btn-warning btn-sm">
                                            <i class="fas fa-edit me-1"></i>Modifier (Admin)
                                        </a>
                                        <form method="post" action="{{ path('app_clothe_delete', {'id': clothe.id}) }}" 
                                              style="display: inline;"
                                              onsubmit="return confirm('⚠️ ATTENTION : Supprimer ce vêtement supprimera AUSSI tous ses emprunts (passés et présents). Êtes-vous sûr de vouloir continuer en tant qu\'administrateur ?')">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ clothe.id) }}">
                                            <button type="submit" class="btn btn-danger btn-sm">
                                                <i class="fas fa-trash me-1"></i>Supprimer
                                            </button>
                                        </form>
                                    {% elseif app.user and clothe.currentBorrower is null %}
                                        <form method="post" action="{{ path('app_rent_request_create', {'id': clothe.id}) }}" 
                                              style="display: inline;">
                                            <button type="submit" class="btn btn-success btn-sm" 
                                                    onclick="return confirm('Êtes-vous sûr de vouloir demander à emprunter ce vêtement ?')">
                                                <i class="fas fa-hand-holding me-1"></i>Demander
                                            </button>
                                        </form>
                                    {% elseif app.user and clothe.currentBorrower == app.user %}
                                        <form method="post" action="{{ path('app_clothe_rendre', {'id': clothe.id}) }}" 
                                              style="display: inline;">
                                            <input type="hidden" name="_token" value="{{ csrf_token('rendre' ~ clothe.id) }}">
                                            <button type="submit" class="btn btn-warning btn-sm" 
                                                    onclick="return confirm('Êtes-vous sûr de vouloir rendre ce vêtement ?')">
                                                <i class="fas fa-undo me-1"></i>Rendre
                                            </button>
                                        </form>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <!-- Message quand aucun vêtement -->
        <div class="alert alert-info text-center">
            <i class="fas fa-info-circle fa-3x mb-3 text-pink"></i>
            <h4>Aucun vêtement disponible</h4>
            <p>Il n'y a pas encore de vêtements à louer.</p>
            {% if app.user %}
                <a href="{{ path('app_clothe_new') }}" class="btn btn-primary">
                    <i class="fas fa-plus me-1"></i>Ajouter le premier vêtement
                </a>
            {% endif %}
        </div>
    {% endif %}
</div>
{% endblock %}