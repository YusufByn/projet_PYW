{% extends 'base.html.twig' %}

{% block title %}Clothe index{% endblock %}

{% block body %}
    <h1>Clothe index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Img</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for clothe in clothes %}
            <tr>
                <td>{{ clothe.id }}</td>
                <td>{{ clothe.title }}</td>
                <td>
                    {% if clothe.img %}
                        <img src="{{ asset('images/' ~ clothe.img) }}" alt="{{ clothe.title }}" style="width: 100px; height: 100px; object-fit: cover;">
                    {% else %}
                        <span class="text-muted">Aucune image</span>
                    {% endif %}
                </td>
                <td>
                    <a href="{{ path('app_clothe_show', {'id': clothe.id}) }}">show</a>
                    <a href="{{ path('app_clothe_edit', {'id': clothe.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_clothe_new') }}">Create new</a>
{% endblock %}
