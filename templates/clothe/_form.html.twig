{{ form_start(form, {'attr': {'enctype': 'multipart/form-data', 'class': 'needs-validation', 'novalidate': true}}) }}
    <div class="mb-4">
        {{ form_label(form.title, 'Titre du vêtement', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.title, {'attr': {'class': 'form-control', 'placeholder': 'Gros slip sale'}}) }}
        {{ form_errors(form.title) }}
    </div>

    <div class="mb-4">
        {{ form_label(form.imageFile, 'Image du vêtement', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.imageFile, {'attr': {'class': 'form-control', 'accept': 'image/*'}}) }}
        {{ form_errors(form.imageFile) }}
        {% if clothe.img %}
            <div class="mt-2">
                <div class="alert alert-info">
                    <i class="fas fa-image me-2"></i>
                    <strong>Image actuelle :</strong> {{ clothe.img }}
                </div>
            </div>
        {% endif %}
        <div class="form-text">
            <i class="fas fa-info-circle me-1"></i>
            Formats acceptés : JPG, PNG, GIF. Taille maximale : 5MB
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-4">
            {{ form_label(form.state, 'État du vêtement', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.state, {'attr': {'class': 'form-select'}}) }}
            {{ form_errors(form.state) }}
        </div>

        <div class="col-md-6 mb-4">
            {{ form_label(form.category, 'Catégorie', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.category, {'attr': {'class': 'form-select'}}) }}
            {{ form_errors(form.category) }}
        </div>
    </div>

    {# Champ caché pour l'image #}
    {{ form_widget(form.img) }}

    <!-- Boutons d'action -->
    <div class="d-flex gap-3 justify-content-between">
        <form method="post" action="{{ path('app_clothe_delete', {'id': clothe.id}) }}" 
              onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce vêtement ?');" style="display: inline;">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ clothe.id) }}">
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash me-1"></i>Supprimer
            </button>
        </form>
        
        <div class="d-flex gap-3">
            <a href="{{ path('app_clothe_index') }}" class="btn btn-outline-secondary">
                <i class="fas fa-times me-1"></i>Annuler
            </a>
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save me-1"></i>{{ button_label|default('Enregistrer') }}
            </button>
        </div>
    </div>
{{ form_end(form) }}
