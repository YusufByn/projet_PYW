{% extends 'base.html.twig' %}

{% block title %}Mes Vêtements - PYW{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4">
                <i class="fas fa-tshirt"></i> Mes Vêtements
            </h1>
            
            {% if clothes|length > 0 %}
                <div class="row">
                    {% for clothe in clothes %}
                        <div class="col-md-4 mb-4">
                            <div class="card h-100">
                                {% if clothe.img %}
                                    <img src="{{ asset('images/' ~ clothe.img) }}" class="card-img-top" alt="{{ clothe.title }}" style="height: 250px; object-fit: cover;">
                                {% else %}
                                    <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 250px;">
                                        <i class="fas fa-image text-muted fa-3x"></i>
                                    </div>
                                {% endif %}
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title">{{ clothe.title }}</h5>
                                    <p class="card-text">
                                        <span class="badge bg-secondary">{{ clothe.state.name }}</span>
                                        <span class="badge bg-info">{{ clothe.category.name }}</span>
                                    </p>
                                    <div class="mt-auto">
                                        <a href="{{ path('app_clothe_show', {'id': clothe.id}) }}" class="btn btn-primary btn-sm">Voir</a>
                                        <a href="{{ path('app_clothe_edit', {'id': clothe.id}) }}" class="btn btn-secondary btn-sm">Modifier</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <div class="alert alert-info text-center">
                    <i class="fas fa-info-circle fa-2x mb-3"></i>
                    <h4>Vous n'avez pas encore publié de vêtements</h4>
                    <p>Commencez par ajouter votre premier vêtement à la location !</p>
                    <a href="{{ path('app_clothe_new') }}" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Ajouter un vêtement
                    </a>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
