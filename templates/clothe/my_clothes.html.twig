{% extends 'base.html.twig' %}

{% block title %}Mes Vêtements - PYW{% endblock %}

{% block body %}
<div class="fade-in-up">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-pink">
            <i class="fas fa-tshirt me-2"></i>Mes Vêtements
        </h1>
        <div class="d-flex gap-2">
            <a href="{{ path('app_clothe_new') }}" class="btn btn-primary">
                <i class="fas fa-plus me-1"></i>Ajouter un vêtement
            </a>
            <a href="{{ path('app_profile') }}" class="btn btn-outline-primary">
                <i class="fas fa-arrow-left me-1"></i>Retour au profil
            </a>
        </div>
    </div>

    {% if clothes|length > 0 %}
        <div class="row">
            {% for clothe in clothes %}
                <div class="col-12 col-md-6 col-lg-4 mb-4">
                    <div class="card h-100">
                        <!-- Image du vêtement -->
                        <div class="position-relative">
                            {% if clothe.img %}
                                <img src="{{ asset('images/' ~ clothe.img) }}" 
                                     class="card-img-top" 
                                     alt="{{ clothe.title }}" 
                                     style="height: 250px; object-fit: cover;">
                            {% else %}
                                <div class="bg-pink d-flex align-items-center justify-content-center" 
                                     style="height: 250px;">
                                    <i class="fas fa-image text-pink fa-3x"></i>
                                </div>
                            {% endif %}
                            
                            <!-- Badge de statut -->
                            <div class="position-absolute top-0 end-0 m-2">
                                {% if clothe.currentBorrower %}
                                    <span class="badge bg-warning">
                                        <i class="fas fa-user me-1"></i>Emprunté par {{ clothe.currentBorrower.email }}
                                    </span>
                                {% else %}
                                    <span class="badge bg-success">
                                        <i class="fas fa-check me-1"></i>Disponible
                                    </span>
                                {% endif %}
                            </div>
                        </div>
                        
                        <!-- Contenu de la carte -->
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">{{ clothe.title }}</h5>
                            
                            <!-- Badges d'état et catégorie -->
                            <div class="mb-3">
                                <span class="badge bg-secondary me-2">
                                    <i class="fas fa-tag me-1"></i>{{ clothe.state.name ?? 'Non défini' }}
                                </span>
                                <span class="badge bg-info">
                                    <i class="fas fa-layer-group me-1"></i>{{ clothe.category.name ?? 'Non définie' }}
                                </span>
                            </div>
                            
                            <!-- Actions -->
                            <div class="mt-auto">
                                <div class="d-flex gap-2 flex-wrap">
                                    <a href="{{ path('app_clothe_show', {'id': clothe.id}) }}" 
                                       class="btn btn-primary btn-sm">
                                        <i class="fas fa-eye me-1"></i>Voir
                                    </a>
                                    
                                    <a href="{{ path('app_clothe_edit', {'id': clothe.id}) }}" 
                                       class="btn btn-outline-primary btn-sm">
                                        <i class="fas fa-edit me-1"></i>Modifier
                                    </a>
                                    
                                    <a href="{{ path('app_rent_received') }}" 
                                       class="btn btn-info btn-sm">
                                        <i class="fas fa-inbox me-1"></i>Demandes
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <!-- Message quand aucun vêtement -->
        <div class="alert alert-info text-center">
            <i class="fas fa-info-circle fa-3x mb-3 text-pink"></i>
            <h4>Vous n'avez pas encore de vêtements à louer</h4>
            <p>Ajoutez votre premier vêtement pour commencer à le partager !</p>
            <a href="{{ path('app_clothe_new') }}" class="btn btn-primary">
                <i class="fas fa-plus me-1"></i>Ajouter un vêtement
            </a>
        </div>
    {% endif %}
</div>
{% endblock %}
