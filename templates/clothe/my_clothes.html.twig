{% extends 'base.html.twig' %}

{% block title %}Mes Vêtements - PYW{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>
                    <i class="fas fa-tshirt"></i> Mes Vêtements
                </h1>
                <div>
                    <a href="{{ path('app_clothe_new') }}" class="btn btn-success">
                        <i class="fas fa-plus"></i> Ajouter un vêtement
                    </a>
                    <a href="{{ path('app_profile') }}" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i> Retour au profil
                    </a>
                </div>
            </div>
            
            {% if clothes|length > 0 %}
                <div class="row">
                    {% for clothe in clothes %}
                        <div class="col-md-6 mb-4">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h5 class="card-title">{{ clothe.title }}</h5>
                                    
                                    {% if clothe.img %}
                                        <img src="{{ asset('images/' ~ clothe.img) }}" class="img-fluid rounded mb-3" alt="{{ clothe.title }}" style="max-height: 200px; object-fit: cover;">
                                    {% endif %}
                                    
                                    <div class="mb-2">
                                        <span class="badge bg-secondary">{{ clothe.state ? clothe.state.name : 'Non défini' }}</span>
                                        <span class="badge bg-info">{{ clothe.category ? clothe.category.name : 'Non définie' }}</span>
                                    </div>
                                    
                                    {% if clothe.currentBorrower %}
                                        <div class="alert alert-warning">
                                            <i class="fas fa-user"></i> <strong>Emprunté par :</strong> {{ clothe.currentBorrower.email }}
                                        </div>
                                    {% else %}
                                        <div class="alert alert-success">
                                            <i class="fas fa-check"></i> <strong>Disponible</strong>
                                        </div>
                                    {% endif %}
                                    
                                    <div class="d-flex gap-2">
                                        <a href="{{ path('app_clothe_show', {'id': clothe.id}) }}" class="btn btn-primary btn-sm">
                                            <i class="fas fa-eye"></i> Voir
                                        </a>
                                        
                                        <a href="{{ path('app_clothe_edit', {'id': clothe.id}) }}" class="btn btn-secondary btn-sm">
                                            <i class="fas fa-edit"></i> Modifier
                                        </a>
                                        
                                        <a href="{{ path('app_rent_request_received') }}" class="btn btn-info btn-sm">
                                            <i class="fas fa-inbox"></i> Demandes
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <div class="alert alert-info text-center">
                    <i class="fas fa-info-circle fa-2x mb-3"></i>
                    <h4>Aucun vêtement ajouté</h4>
                    <p>Commencez par ajouter vos premiers vêtements à la location.</p>
                    <a href="{{ path('app_clothe_new') }}" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Ajouter un vêtement
                    </a>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
