{% extends 'base.html.twig' %}

{% block title %}Mes Demandes d'Emprunt - PYW{% endblock %}

{% block body %}
<div class="fade-in-up">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-pink">
            <i class="fas fa-paper-plane me-2"></i>Mes Demandes d'Emprunt
        </h1>
        <a href="{{ path('app_profile') }}" class="btn btn-outline-primary">
            <i class="fas fa-arrow-left me-1"></i>Retour au profil
        </a>
    </div>

    {% if requests|length > 0 %}
        <div class="row">
            {% for request in requests %}
                <div class="col-12 col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">{{ request.clothes.title }}</h5>
                            
                            <!-- Image du vêtement -->
                            {% if request.clothes.img %}
                                <img src="{{ asset('images/' ~ request.clothes.img) }}" 
                                     class="img-fluid rounded mb-3" 
                                     alt="{{ request.clothes.title }}" 
                                     style="max-height: 200px; object-fit: cover;">
                            {% endif %}
                            
                            <!-- Badges d'état et catégorie -->
                            <div class="mb-3">
                                <span class="badge bg-secondary me-2">
                                    <i class="fas fa-tag me-1"></i>{{ request.clothes.state ? request.clothes.state.name : 'Non défini' }}
                                </span>
                                <span class="badge bg-info">
                                    <i class="fas fa-layer-group me-1"></i>{{ request.clothes.category ? request.clothes.category.name : 'Non définie' }}
                                </span>
                            </div>
                            
                            <!-- Informations -->
                            <div class="mb-3">
                                <p class="text-muted mb-1">
                                    <i class="fas fa-user me-2"></i>Propriétaire : {{ request.clothes.user ? request.clothes.user.email : 'Non défini' }}
                                </p>
                                <p class="text-muted mb-1">
                                    <i class="fas fa-calendar me-2"></i>Demande du : {{ request.dateDebut|date('d/m/Y à H:i') }}
                                </p>
                            </div>
                            
                            <!-- Statut -->
                            <div class="mb-3">
                                <span class="badge bg-warning">
                                    <i class="fas fa-clock me-1"></i>En attente
                                </span>
                            </div>
                            
                            <!-- Actions -->
                            <div class="d-flex gap-2">
                                <a href="{{ path('app_clothe_show', {'id': request.clothes.id}) }}" 
                                   class="btn btn-primary btn-sm">
                                    <i class="fas fa-eye me-1"></i>Voir le vêtement
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <!-- Message quand aucune demande -->
        <div class="alert alert-info text-center">
            <i class="fas fa-info-circle fa-3x mb-3 text-pink"></i>
            <h4>Vous n'avez aucune demande d'emprunt en cours</h4>
            <p>Explorez les vêtements disponibles pour faire votre première demande !</p>
            <a href="{{ path('app_clothe_index') }}" class="btn btn-primary">
                <i class="fas fa-search me-1"></i>Voir tous les vêtements
            </a>
        </div>
    {% endif %}
</div>
{% endblock %}
