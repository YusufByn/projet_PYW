{% extends 'base.html.twig' %}

{% block title %}Mes Emprunts en Cours - PYW{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>
                    <i class="fas fa-hand-holding"></i> Mes Emprunts en Cours
                </h1>
                <a href="{{ path('app_profile') }}" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left"></i> Retour au profil
                </a>
            </div>
            
            {% if rents|length > 0 %}
                <div class="row">
                    {% for rent in rents %}
                        <div class="col-md-6 mb-4">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h5 class="card-title">{{ rent.clothes.title }}</h5>
                                    
                                    {% if rent.clothes.img %}
                                        <img src="{{ asset('images/' ~ rent.clothes.img) }}" class="img-fluid rounded mb-3" alt="{{ rent.clothes.title }}" style="max-height: 200px; object-fit: cover;">
                                    {% endif %}
                                    
                                    <div class="mb-2">
                                        <span class="badge bg-secondary">{{ rent.clothes.state ? rent.clothes.state.name : 'Non défini' }}</span>
                                        <span class="badge bg-info">{{ rent.clothes.category ? rent.clothes.category.name : 'Non définie' }}</span>
                                    </div>
                                    
                                    <p class="text-muted">
                                        <i class="fas fa-user"></i> Propriétaire : {{ rent.clothes.user ? rent.clothes.user.email : 'Non défini' }}
                                    </p>
                                    
                                    <p class="text-muted">
                                        <i class="fas fa-calendar"></i> Emprunté le : {{ rent.dateDebut|date('d/m/Y à H:i') }}
                                    </p>
                                    
                                    <div class="mb-3">
                                        {% if rent.statut == 'en_cours' %}
                                            <span class="badge bg-success">En cours</span>
                                        {% elseif rent.statut == 'termine' %}
                                            <span class="badge bg-secondary">Terminé</span>
                                        {% else %}
                                            <span class="badge bg-warning">{{ rent.statut }}</span>
                                        {% endif %}
                                    </div>
                                    
                                    <div class="d-flex gap-2">
                                        <a href="{{ path('app_clothe_show', {'id': rent.clothes.id}) }}" class="btn btn-primary btn-sm">
                                            <i class="fas fa-eye"></i> Voir le vêtement
                                        </a>
                                        
                                        {% if rent.statut == 'en_cours' %}
                                            <form method="post" action="{{ path('app_clothe_return', {'id': rent.clothes.id}) }}" style="display: inline;">
                                                <button type="submit" class="btn btn-warning btn-sm" onclick="return confirm('Êtes-vous sûr de vouloir rendre ce vêtement ?')">
                                                    <i class="fas fa-undo"></i> Rendre
                                                </button>
                                            </form>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <div class="alert alert-info text-center">
                    <i class="fas fa-info-circle fa-2x mb-3"></i>
                    <h4>Vous n'avez aucun emprunt en cours</h4>
                    <p>Explorez les vêtements disponibles pour commencer à emprunter !</p>
                    <div class="d-flex gap-2 justify-content-center">
                        <a href="{{ path('app_clothe_index') }}" class="btn btn-primary">
                            <i class="fas fa-search"></i> Voir tous les vêtements
                        </a>
                        <a href="{{ path('app_rent_request_my_requests') }}" class="btn btn-outline-secondary">
                            <i class="fas fa-paper-plane"></i> Mes demandes
                        </a>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
