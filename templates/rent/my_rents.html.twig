{% extends 'base.html.twig' %}

{% block title %}Mes Emprunts - PYW{% endblock %}

{% block body %}
<div class="fade-in-up">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-pink">
            <i class="fas fa-hand-holding me-2"></i>Mes Emprunts en Cours
        </h1>
        <a href="{{ path('app_profile') }}" class="btn btn-outline-primary">
            <i class="fas fa-arrow-left me-1"></i>Retour au profil
        </a>
    </div>

    {% if rents|length > 0 %}
        <div class="row">
            {% for rent in rents %}
                <div class="col-12 col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">{{ rent.clothes.title }}</h5>
                            
                            <!-- Image du vêtement -->
                            {% if rent.clothes.img %}
                                <img src="{{ asset('images/' ~ rent.clothes.img) }}" 
                                     class="img-fluid rounded mb-3" 
                                     alt="{{ rent.clothes.title }}" 
                                     style="max-height: 200px; object-fit: cover;">
                            {% endif %}
                            
                            <!-- Badges d'état et catégorie -->
                            <div class="mb-3">
                                <span class="badge bg-secondary me-2">
                                    <i class="fas fa-tag me-1"></i>{{ rent.clothes.state ? rent.clothes.state.name : 'Non défini' }}
                                </span>
                                <span class="badge bg-info">
                                    <i class="fas fa-layer-group me-1"></i>{{ rent.clothes.category ? rent.clothes.category.name : 'Non définie' }}
                                </span>
                            </div>
                            
                            <!-- Informations -->
                            <div class="mb-3">
                                <p class="text-muted mb-1">
                                    <i class="fas fa-user me-2"></i>Propriétaire : {{ rent.clothes.user ? rent.clothes.user.email : 'Non défini' }}
                                </p>
                                <p class="text-muted mb-1">
                                    <i class="fas fa-calendar me-2"></i>Emprunté le : {{ rent.dateDebut|date('d/m/Y à H:i') }}
                                </p>
                            </div>
                            
                            <!-- Statut -->
                            <div class="mb-3">
                                {% if rent.statut == 'en_cours' %}
                                    <span class="badge bg-success">
                                        <i class="fas fa-check me-1"></i>En cours
                                    </span>
                                {% elseif rent.statut == 'termine' %}
                                    <span class="badge bg-secondary">
                                        <i class="fas fa-times me-1"></i>Terminé
                                    </span>
                                {% else %}
                                    <span class="badge bg-warning">{{ rent.statut }}</span>
                                {% endif %}
                            </div>
                            
                            <!-- Actions -->
                            <div class="d-flex gap-2">
                                <a href="{{ path('app_clothe_show', {'id': rent.clothes.id}) }}" 
                                   class="btn btn-primary btn-sm">
                                    <i class="fas fa-eye me-1"></i>Voir le vêtement
                                </a>
                                
                                {% if rent.statut == 'en_cours' %}
                                    <form method="post" action="{{ path('app_clothe_rendre', {'id': rent.clothes.id}) }}" 
                                          style="display: inline;">
                                        <input type="hidden" name="_token" value="{{ csrf_token('rendre' ~ rent.clothes.id) }}">
                                        <button type="submit" 
                                                class="btn btn-warning btn-sm" 
                                                onclick="return confirm('Êtes-vous sûr de vouloir rendre ce vêtement ?')">
                                            <i class="fas fa-undo me-1"></i>Rendre
                                        </button>
                                    </form>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <!-- Message quand aucun emprunt -->
        <div class="alert alert-info text-center">
            <i class="fas fa-info-circle fa-3x mb-3 text-pink"></i>
            <h4>Vous n'avez aucun emprunt en cours</h4>
            <p>Explorez les vêtements disponibles pour commencer à emprunter !</p>
            <div class="d-flex gap-2 justify-content-center">
                <a href="{{ path('app_clothe_index') }}" class="btn btn-primary">
                    <i class="fas fa-search me-1"></i>Voir tous les vêtements
                </a>
                <a href="{{ path('app_rent_history') }}" class="btn btn-outline-secondary">
                    <i class="fas fa-history me-1"></i>Voir l'historique
                </a>
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}
