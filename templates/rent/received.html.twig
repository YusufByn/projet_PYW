{% extends 'base.html.twig' %}

{% block title %}Demandes Reçues - PYW{% endblock %}

{% block body %}
<div class="fade-in-up">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-pink">
            <i class="fas fa-inbox me-2"></i>Demandes de Location Reçues
        </h1>
        <a href="{{ path('app_profile') }}" class="btn btn-outline-primary">
            <i class="fas fa-arrow-left me-1"></i>Retour au profil
        </a>
    </div>

    {% if requests|length > 0 %}
        <div class="row">
            {% for request in requests %}
                <div class="col-12 col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">{{ request.clothes.title }}</h5>
                            
                            <!-- Image du vêtement -->
                            {% if request.clothes.img %}
                                <img src="{{ asset('images/' ~ request.clothes.img) }}" 
                                     class="img-fluid rounded mb-3" 
                                     alt="{{ request.clothes.title }}" 
                                     style="max-height: 200px; object-fit: cover;">
                            {% endif %}
                            
                            <!-- Badges d'état et catégorie -->
                            <div class="mb-3">
                                <span class="badge bg-secondary me-2">
                                    <i class="fas fa-tag me-1"></i>{{ request.clothes.state ? request.clothes.state.name : 'Non défini' }}
                                </span>
                                <span class="badge bg-info">
                                    <i class="fas fa-layer-group me-1"></i>{{ request.clothes.category ? request.clothes.category.name : 'Non définie' }}
                                </span>
                            </div>
                            
                            <!-- Informations -->
                            <div class="mb-3">
                                <p class="text-muted mb-1">
                                    <i class="fas fa-user me-2"></i>Demandé par : {{ request.user ? request.user.email : 'Non défini' }}
                                </p>
                                <p class="text-muted mb-1">
                                    <i class="fas fa-calendar me-2"></i>Demande du : {{ request.dateDebut|date('d/m/Y à H:i') }}
                                </p>
                            </div>
                            
                            <!-- Statut -->
                            <div class="mb-3">
                                <span class="badge bg-warning">
                                    <i class="fas fa-clock me-1"></i>En attente
                                </span>
                            </div>
                            
                            <!-- Actions -->
                            <div class="d-flex gap-2 flex-wrap">
                                <a href="{{ path('app_clothe_show', {'id': request.clothes.id}) }}" 
                                   class="btn btn-primary btn-sm">
                                    <i class="fas fa-eye me-1"></i>Voir le vêtement
                                </a>
                                
                                <form method="post" action="{{ path('app_rent_approve', {'id': request.id}) }}" 
                                      style="display: inline;">
                                    <button type="submit" 
                                            class="btn btn-success btn-sm" 
                                            onclick="return confirm('Êtes-vous sûr de vouloir approuver cette demande ?')">
                                        <i class="fas fa-check me-1"></i>Approuver
                                    </button>
                                </form>
                                
                                <form method="post" action="{{ path('app_rent_reject', {'id': request.id}) }}" 
                                      style="display: inline;">
                                    <button type="submit" 
                                            class="btn btn-danger btn-sm" 
                                            onclick="return confirm('Êtes-vous sûr de vouloir rejeter cette demande ?')">
                                        <i class="fas fa-times me-1"></i>Rejeter
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <!-- Message quand aucune demande -->
        <div class="alert alert-info text-center">
            <i class="fas fa-info-circle fa-3x mb-3 text-pink"></i>
            <h4>Vous n'avez aucune demande de location en attente</h4>
            <p>Tous vos vêtements sont disponibles ou déjà empruntés.</p>
            <a href="{{ path('app_my_clothes') }}" class="btn btn-primary">
                <i class="fas fa-tshirt me-1"></i>Voir mes vêtements
            </a>
        </div>
    {% endif %}
</div>
{% endblock %}
