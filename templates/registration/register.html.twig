{% extends 'base.html.twig' %}

{% block title %}Inscription - PYW{% endblock %}

{% block body %}
<div class="fade-in-up">
    <div class="row justify-content-center">
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card">
                <div class="card-header text-center">
                    <div class="bg-pink rounded-circle d-inline-flex align-items-center justify-content-center mb-3" 
                         style="width: 60px; height: 60px;">
                        <i class="fas fa-user-plus fa-2x text-pink"></i>
                    </div>
                    <h3 class="text-pink mb-0">Inscription</h3>
                </div>
                
                <div class="card-body">
                    {% if app.user %}
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            Vous êtes déjà connecté en tant que {{ app.user.userIdentifier }}
                            <a href="{{ path('app_logout') }}" class="alert-link">Se déconnecter</a>
                        </div>
                    {% else %}
                        {{ form_errors(registrationForm) }}

                        {{ form_start(registrationForm, {'attr': {'class': 'needs-validation', 'novalidate': true}}) }}
                            <div class="mb-3">
                                <label for="{{ registrationForm.email.vars.id }}" class="form-label">
                                    <i class="fas fa-envelope me-1"></i>Email
                                </label>
                                {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control', 'autocomplete': 'email', 'required': true, 'autofocus': true}}) }}
                                {{ form_errors(registrationForm.email) }}
                            </div>
                            
                            <div class="mb-3">
                                <label for="{{ registrationForm.username.vars.id }}" class="form-label">
                                    <i class="fas fa-user me-1"></i>Nom d'utilisateur
                                </label>
                                {{ form_widget(registrationForm.username, {'attr': {'class': 'form-control', 'autocomplete': 'username', 'required': true}}) }}
                                {{ form_errors(registrationForm.username) }}
                            </div>
                            
                            <div class="mb-3">
                                <label for="{{ registrationForm.plainPassword.vars.id }}" class="form-label">
                                    <i class="fas fa-lock me-1"></i>Mot de passe
                                </label>
                                {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control', 'autocomplete': 'new-password', 'required': true}}) }}
                                {{ form_errors(registrationForm.plainPassword) }}
                            </div>
                            
                            <div class="mb-4">
                                <div class="form-check">
                                    {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                                    <label class="form-check-label" for="{{ registrationForm.agreeTerms.vars.id }}">
                                        <i class="fas fa-check-circle me-1"></i>
                                        J'accepte les <a href="#" class="text-decoration-none">conditions d'utilisation</a>
                                    </label>
                                </div>
                                {{ form_errors(registrationForm.agreeTerms) }}
                            </div>
                            
                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary btn-lg">
                                    <i class="fas fa-user-plus me-2"></i>S'inscrire
                                </button>
                            </div>
                        {{ form_end(registrationForm) }}
                        
                        <div class="text-center mt-4">
                            <p class="text-muted">
                                Déjà un compte ? 
                                <a href="{{ path('app_login') }}" class="text-decoration-none">
                                    <i class="fas fa-sign-in-alt me-1"></i>Se connecter
                                </a>
                            </p>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
