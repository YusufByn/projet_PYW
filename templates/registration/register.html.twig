{% extends 'base.html.twig' %}

{% block title %}Inscription - PYW{% endblock %}

{% block body %}
<div class="fade-in-up">
    <div class="row justify-content-center">
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card">
                <div class="card-header text-center">
                    <div class="bg-pink rounded-circle d-inline-flex align-items-center justify-content-center mb-3" 
                         style="width: 60px; height: 60px;">
                        <i class="fas fa-user-plus fa-2x text-pink"></i>
                    </div>
                    <h3 class="text-pink mb-0">Inscription</h3>
                </div>
                
                <div class="card-body">
                    {% if app.user %}
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            Vous êtes déjà connecté en tant que {{ app.user.userIdentifier }}
                            <a href="{{ path('app_logout') }}" class="alert-link">Se déconnecter</a>
                        </div>
                    {% else %}
                        {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}
        {{ form_row(registrationForm.agreeTerms, {   
            label : 'Termes de confidentialités'
        }) }}

        <button type="submit" class="btn">S'inscrire</button>
    {{ form_end(registrationForm) }}
{% endblock %}
